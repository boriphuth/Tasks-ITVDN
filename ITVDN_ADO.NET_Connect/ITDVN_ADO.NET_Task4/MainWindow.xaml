<Window x:Class="ITDVN_ADO.NET_Task4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITDVN_ADO.NET_Task4"
        mc:Ignorable="d"
        Title="MainWindow" Width="525" Loaded="Window_Loaded">
    <StackPanel>
        <Label x:Name="lblCurrentTable">1st table</Label>
        <DataGrid x:Name="dataGridCurrent"></DataGrid>
        <Label>Enter command:</Label>
        <TextBox x:Name="txtCmd" PreviewKeyDown="txtCmd_PreviewKeyDown"></TextBox>
        <Label x:Name="lblChangeTable">2nd table</Label>
        <DataGrid x:Name="dataGridChanged" Foreground="Green" Background="Beige"></DataGrid>
        <Button x:Name="btnShowChange" Width="120" Click="btnShowChange_Click">Show changed data</Button>
    </StackPanel>
</Window>
